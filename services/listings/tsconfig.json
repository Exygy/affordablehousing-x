{
  "compilerOptions": {
    // these are app-optimized, and we expect TS-based services to override many options
    "types": [
      "reflect-metadata"
    ],
    "lib": [
      "es2015"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "target": "es2015",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./../../",
    }
  }

