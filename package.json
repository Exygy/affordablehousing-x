{
  "name": "dahlia",
  "version": "0.0.1",
  "description": "DAHLIA is a system to manage processes for affordable housing",
  "workspaces": [
    "shared/ui-components",
    "shared/styles",
    "apps/public",
    "services/listings"
  ],
  "repository": "https://github.com/Exygy/dahlia-x.git",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev:all": "concurrently \"cd services/listings && yarn dev\" \"cd apps/public && yarn dev\"",
    "test:all": "concurrently \"cd services/listings && yarn test\" \"cd apps/public && yarn test\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'Test' && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint"
  }
}
