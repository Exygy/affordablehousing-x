<h1>
    <span style="font-family: Arial, Helvetica, sans-serif; font-size: 24px;">{{t "invite.hello"}}</span><br />
    {{> user-name }}
</h1>

<p>
    {{t "invite.inviteMessage" appOptions}}
    <br /><br />
    <strong>{{t "invite.toCompleteAccountCreation"}}</strong>
</p>

<table role="presentation" border="0" cellpadding="0" cellspacing="0">
    <tbody>
        <tr>
            <td align="center">
                <a
                    class="btn btn-primary"
                    href="{{confirmationUrl}}"
                    target="_blank"
                >
                    {{t "invite.confirmMyAccount"}}
                </a>
            </td>
        </tr>
    </tbody>
</table>

{{> footer }}
